<h1> Create an account </h1>

<%= form_for @user do |form| %>
	<%= form.text_field :username,
			placeholder: 'Username',
			required: true
	%>

	<%= form.password_field :password,
			placeholder: 'Password',
			required: true
	%>

	<%= submit_tag 'Create Account!' %>
<% end %>

<p> Or </p>
<%= link_to 'Sign in', new_session_path %>
