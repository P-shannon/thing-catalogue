<h1> Sign in! </h1>

<%= form_for :user, url: sessions_path do |form| %>
	<%= form.text_field :username,
			placeholder: 'Username',
			required: true
	%>

	<%= form.password_field :password,
			placeholder: 'Password',
			required: true
	%>

	<%= submit_tag 'Sign in!' %>
<% end %>

<p> Or </p>
<%= link_to 'Create an account', new_user_path %>
